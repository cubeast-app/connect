{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cubeast Connect",
  "version": "0.6.1",
  "identifier": "com.cubeast.connect",
  "build": {
    "beforeDevCommand": "yarn start",
    "devUrl": "http://localhost:4200",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist/cubeast-connect/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Cubeast Connect",
        "width": 700,
        "height": 480,
        "resizable": false,
        "visible": true,
        "closable": true,
        "minimizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "appimage",
      "dmg",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEwN0EzRDExMkU2OTE5NjcKUldSbkdXa3VFVDE2RUp1YmNQa3ZuaXFIMTZXdFA0TGF0dmNlNlFvYm9sYzB1MG54bWhFNVdQMkkK",
      "endpoints": [
        "https://github.com/cubeast-app/connect/releases/latest/download/latest.json"
      ]
    },
    "cli": {
      "description": "Cubeast Connect",
      "args": [
        {
          "short": "b",
          "name": "background",
          "description": "Don't open the UI on app start"
        },
        {
          "name": "bind",
          "description": "TCP bind address for the WebSocket server (default: 127.0.0.1:17430)",
          "takesValue": true
        },
        {
          "name": "allow-any-origin",
          "description": "Allow any origin for WebSocket connections (INSECURE - for development only)"
        }
      ]
    }
  }

}
